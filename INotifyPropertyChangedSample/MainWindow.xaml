<Window x:Class="INotifyPropertyChangedSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChangedSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="textBox1" Text="{Binding Name, Mode=TwoWay}"/>
            <TextBox Name="textBox2" Text="{Binding WebSite, Mode=TwoWay}"/>
            <Button Content="確認" x:Name="buttonConfirm"/>
            <Button Content="変更" x:Name="buttonChange"/>
        </StackPanel>
    </Grid>
</Window>
